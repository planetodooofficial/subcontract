<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="delivery_layout">
        <div class="header o_clean_header">
            <div class="row">
                <div class="row" style="text-align:center">
                </div>
            </div>
        </div>
        <div class="footer">
        </div>
        <div class="article">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="report_delivery_document">
        <t t-call="subcontract.delivery_layout">
            <style>
                td{
                border-left: 1px solid black;
                border-right: 1px solid black;
                border-bottom: 1px solid black;
                border-top: 1px solid black;
                }
                tr{
                border-left: 1px solid black;
                border-right: 1px solid black;
                border-bottom: 1px solid black;
                border-top: 1px solid black;
                }
                tr.tr-new {
                border-left: 1px solid black;
                border-right: 1px solid black;

                border-top: 1px solid black;
                }
            </style>
            <t t-foreach="datas" t-as='val'>
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row" style="text-align:center">
                        <table width="100%">
                            <tr>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">JOB WORK CHALLAN</p></strong>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">Original</p></strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="6" style="padding:3px;height:50px;">
                                    <strong><p style="text-align:center;">[Made under Section 143 of Central Goods and Service Tax Act, 2017 read with Rule 55(b) of Central Goods and Services Tax Rules, 2017</p></strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="6">
                                    <h1> </h1>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">Name and Address of Consigner [Registered Person/Principal]</p></strong>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">Name and Address of the Job worker[Consignee]</p></strong>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:3px" colspan="6">
                                    <span t-esc="val['source_location']"/>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <span t-esc="val['destination_location']"/><br/>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p>Place of Supply</p></strong>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p> </p></strong>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">GSTIN No of the Consigner [Registered Person]</p></strong>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">GSTIN No of the Job-Worker[If Registered]</p></strong>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">Vendor Code</p></strong>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:3px" colspan="6">
                                    <span t-esc="val['source_gst']"/>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <span t-esc="val['dest_gst']"/>
                                </td>
                                <td style="padding:3px" colspan="6">

                                </td>
                            </tr>
                            <tr>
                                <td style="padding:3px" colspan="6">
                                    <h1></h1>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <h1></h1>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <h1></h1>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;">CHALLAN NO</p></strong>
                                </td>
                                <td style="padding:3px" colspan="6">
                                    <strong><p style="text-align:center;"></p></strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_deliveryslip">
        <t t-call="web.html_container">
            <t t-call="subcontract.report_delivery_document"/>
        </t>
    </template>
</odoo>
